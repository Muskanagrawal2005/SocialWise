<!DOCTYPE html>
<html>

<head>
    <title>Events</title>
    <link rel="stylesheet" href="/stylesheets/eventi.css">
</head>

<body>
    <div class="whole">
        <h1>Events</h1>
        <!-- <a href="/events/create">Create New Event</a> -->
        <div class="event-list">
            <% events.forEach(event=> { %>
                <div class="event-item pad">
                    <h2><a href="/events/<%= event._id %>">
                            <%= event.title %>
                        </a></h2>
                    <!-- <p><%= event.description.substring(0, 100) %>...</p> -->
                    <p>Date: <%= event.date.toDateString() %>
                    </p>
                </div>
                <% }) %>
        </div>
        <a id="profile" href="/profile">Back to Profile</a>
    </div>
</body>

</html>